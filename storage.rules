rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Basic helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        (request.auth.token.rol == 'yonetici' || request.auth.token.rol == 'superadmin');
    }
    
    function isTechnician() {
      return isAuthenticated() && 
        (request.auth.token.rol == 'tekniker' || request.auth.token.rol == 'muhendis');
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') && 
        request.resource.size < 10 * 1024 * 1024;
    }
    
    function hasUploadPermission() {
      return isAuthenticated() && 
        (isAdmin() || isTechnician());
    }
    
    // Default rule - deny all
    match /{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if false;
    }

    // Şirket logosu için kurallar
    match /sirket/{imageId} {
      allow read: if true;  // Allow public read access
      allow write, create, update, delete: if isAuthenticated() && 
        request.resource.contentType.matches('image/.*') && 
        request.resource.size < 2 * 1024 * 1024;  // Enforce 2MB limit as per UI
    }
    
    // Company logos
    match /companies/{companyId}/{imageId} {
      allow read: if true;  // Allow public read access
      allow write, create, update, delete: if isAuthenticated() && 
        request.resource.contentType.matches('image/.*') && 
        request.resource.size < 2 * 1024 * 1024;
    }
    
    // Mekanik Bakım
    match /mekanikBakimlar/{imageId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasUploadPermission() && isValidImage();
    }
    
    // Elektrik Bakım
    match /elektrikBakimlar/{imageId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasUploadPermission() && isValidImage();
    }
    
    // Arızalar
    match /arizalar/{imageId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated() && isValidImage();
    }
    
    // İş Raporları
    match /isRaporlari/{imageId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasUploadPermission() && isValidImage();
    }
    
    // Stoklar - Updated rules to allow read for all authenticated users
    match /stoklar/{imageId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasUploadPermission() && isValidImage();
    }
    
    // Santraller
    match /santraller/{imageId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasUploadPermission() && isValidImage();
    }
    
    // Profil Fotoğrafları
    match /profil/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isValidImage() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Çözümler
    match /cozumler/{imageId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasUploadPermission() && isValidImage();
    }
    
    // Kontroller
    match /kontroller/{imageId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if hasUploadPermission() && isValidImage();
    }
  }
}