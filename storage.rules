rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Temel fonksiyonlar
    function isAuthenticated() {
      return request.auth != null;
    }

    // Tüm yollar için kimlik doğrulamalı kullanıcılara okuma izni ver
    match /{allPaths=**} {
      allow read: if isAuthenticated();
      // Kimlik doğrulaması yeterli, rol kontrolünü uygulama tarafında yapacağız
      allow write: if isAuthenticated();
    }
  }
}